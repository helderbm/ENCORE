        "required": [
          "id",
          "name",
          "hw-ver",
          "cluster",
          "group",
          "last-comm",
          "sofware-ver",
          "public-ip",
          "local-ip"
        ]
      },
      "err-codes": {
        "title": "err-codes",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "msg": {
            "type": "string"
          },
