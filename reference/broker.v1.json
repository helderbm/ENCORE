        "required": [
          "id",
          "mac",
          "name",
          "last-comm",
          "manufactor",
          "model",
          "LQI",
          "RSSI",
          "battery-level",
          "tecnology",
          "type",
          "endpoints"
        ]
      },
      "sensor-dg": {
        "title": "sensor-dg-hum",
        "type": "object",
        "description": "Model for Database entries of sensors readings",
        "properties": {
          "id": {
            "type": "number"
          },
          "sensor-id": {
            "type": "string"
          },
          "dg-type": {
            "type": "integer"
          },
          "timestamp": {
            "type": "integer"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        },
        "required": [
          "id",
          "sensor-id",
          "dg-type",
          "timestamp",
          "values"
        ]
      },
      "sgw-alerts": {
        "title": "sgw-dg-alerts",
        "type": "object",
        "description": "Alert entries from SGW and respective sensors",
        "properties": {
          "id": {
            "type": "string"
          },
          "sensor-id": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer"
          },
          "type": {
            "type": "string"
          },
          "level": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "processed": {
            "type": "boolean"
          },
          "raw": {
            "type": "object"
          }
        },
        "required": [
          "id",
          "sensor-id",
          "timestamp",
          "type",
          "level",
          "description",
          "processed"
        ]
      },
      "gps": {
        "title": "gps",
        "type": "object",
        "description": "GPS location",
        "properties": {
          "lat": {
            "type": "string"
          },
          "long": {
            "type": "string"
          }
        },
        "required": [
          "lat",
          "long"
        ]
      },
      "server": {
        "title": "server",
        "type": "object",
        "description": "List of Cloud Broker Server capabilities and status",
        "properties": {
          "id": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer"
          },
          "encryption": {
            "$ref": "#/components/schemas/encryption-supported"
          },
          "api-ver": {
            "type": "string",
            "description": ""
          }
        },
        "required": [
          "id",
          "timestamp",
          "encryption",
          "api-ver"
        ]
      },
      "encryption-supported": {
        "title": "encryption-types",
        "type": "object",
        "description": "Type of encryption communications supported",
        "properties": {
          "MCRYPT_RIJNDAEL_256": {
            "type": "boolean"
          },
          "blockchain": {
            "type": "boolean"
          }
        }
      },
      "sensor-type": {
        "title": "sensor-type",
        "type": "object",
