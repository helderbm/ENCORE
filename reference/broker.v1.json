        "properties": {
          "ligth": {
            "type": "boolean"
          },
          "temp": {
            "type": "boolean"
          },
          "mov": {
            "type": "boolean"
          },
          "hum": {
            "type": "boolean"
          },
          "alarm": {
            "type": "boolean"
          },
          "co2": {
            "type": "boolean"
