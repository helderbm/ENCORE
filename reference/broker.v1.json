{
  "openapi": "3.0.0",
  "info": {
    "title": "BROKER",
    "version": "1.0",
    "description": "Interaction between the Cloud Broker platform (responsible for managing sensors data) and third-party software applications",
    "contact": {
      "name": "Helder Moreira",
      "email": "helder@spa.pt"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/server": {
      "get": {
        "summary": "SERVER endpoint",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "operationId": "get-server",
        "description": "Information regarding Cloud Server",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "request-id": {
                    "type": "string"
                  },
                  "api-ver": {
                    "type": "string"
                  }
                }
              }
            },
            "application/xml": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string"
                  },
                  "request-id": {
                    "type": "string"
                  },
                  "api-ver": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "description": ""
        }
      }
    },
    "/sgws": {
      "get": {
        "summary": "SGWS endpoint",
        "tags": [],
        "responses": {},
        "operationId": "get-sgws",
        "description": "Endpoint representing the smart gateways on the field"
      }
    },
    "/sgws/sensors": {
      "get": {
        "summary": "SENSORS endoint",
        "tags": [],
        "responses": {},
        "operationId": "get-sgws-sensors",
        "description": "Endpoint representing the sensors instaled on smart gateways on the field"
      }
    }
  },
  "components": {
    "schemas": {
      "sensor": {
        "title": "sensor",
        "type": "object",
        "description": "Sensor description",
        "properties": {
          "id": {
            "type": "string"
          },
          "mac": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "last-comm": {
            "type": [
              "string",
              "integer"
            ]
          },
          "manufactor": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "LQI": {
            "type": "number"
          },
          "RSSI": {
            "type": "number"
          },
          "battery-level": {
            "type": "integer"
          },
          "tecnology": {
            "type": "boolean"
          },
          "capabilities": {
            "$ref": "#/components/schemas/sensor-dg-temp"
          }
        }
      },
      "sensor-dg-temp": {
        "title": "sensor-dg-temp",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for temperature sensors"
      },
      "sensor-dg-hum": {
        "title": "sensor-dg-hum",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for humidity sensors"
      },
      "sensor-dg-ligth": {
        "title": "sensor-dg-ligth",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for ligth sensors"
      },
      "sgw-dg-alerts": {
        "title": "sgw-dg-alerts",
        "type": "object",
        "description": "Database entry for SGW and relative sensors alerts",
        "properties": {
          "id": {
            "type": "string"
          },
          "sensor-id": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer"
          },
          "type": {
            "type": "string"
          },
          "level": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "processed": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "sensor-id",
          "timestamp",
          "type",
          "level",
          "description",
          "processed"
        ]
      },
      "sgw": {
        "title": "sgw",
        "type": "object",
        "description": "representation of the remote SGW object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "adress": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "long": {
            "$ref": "#/components/schemas/gps"
          },
          "encryption": {
            "$ref": "#/components/schemas/encryption-supported"
          },
          "recent-alerts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/sgw-dg-alerts"
            }
          },
          "sensors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/sensor"
            }
          }
        }
      },
      "gps": {
        "title": "gps",
        "type": "object",
        "properties": {
          "lat": {
            "type": "string"
          },
          "long": {
            "type": "string"
          }
        },
        "description": "GPS location"
      },
      "sensor-dg-mov": {
        "title": "sensor-dg-mov",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for movement sensors"
      },
      "server": {
        "title": "server",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer"
          },
          "encryption": {
            "$ref": "#/components/schemas/encryption-supported"
          }
        }
      },
      "encryption-supported": {
        "title": "encryption-types",
        "type": "object",
        "properties": {
          "typ1": {
            "type": "boolean"
          },
          "type2": {
            "type": "boolean"
          }
        }
      },
      "sensor-type": {
        "title": "sensor-type",
        "type": "object",
        "properties": {
          "ligth": {
            "type": "boolean"
          },
          "temp": {
            "type": "boolean"
          },
          "mov": {
            "type": "boolean"
          },
          "hum": {
            "type": "boolean"
          },
          "alarm": {
            "type": "boolean"
          },
          "co2": {
            "type": "boolean"
          }
        }
      }
    }
  }
}