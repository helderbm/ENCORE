{
  "openapi": "3.0.0",
  "info": {
    "title": "BROKER",
    "version": "1.0",
    "description": "Interaction between the Cloud Broker platform (responsible for managing sensors data) and third-party software applications",
    "contact": {
      "name": "Helder Moreira",
      "email": "helder@spa.pt"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/server": {
      "get": {
        "summary": "SERVER endpoint",
        "tags": [],
        "responses": {},
        "operationId": "get-server",
        "description": "Information regarding Cloud Server"
      }
    },
    "/sgws": {
      "get": {
        "summary": "SGWS endpoint",
        "tags": [],
        "responses": {},
        "operationId": "get-sgws",
        "description": "Endpoint representing the smart gateways on the field"
      }
    },
    "/sgws/sensors": {
      "get": {
        "summary": "SENSORS endoint",
        "tags": [],
        "responses": {},
        "operationId": "get-sgws-sensors",
        "description": "Endpoint representing the sensors instaled on smart gateways on the field"
      }
    }
  },
  "components": {
    "schemas": {
      "sensor": {
        "title": "sensor",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Sensor description"
      },
      "sensor-dg-temp": {
        "title": "sensor-dg-temp",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for temperature sensors"
      },
      "sensor-dg-hum": {
        "title": "sensor-dg-hum",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for humidity sensors"
      },
      "sensor-dg-ligth": {
        "title": "sensor-dg-ligth",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for ligth sensors"
      },
      "sgw-dg-alerts": {
        "title": "sgw-dg-alerts",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for SGW and relative sensors alerts"
      },
      "sgw": {
        "title": "sgw",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "long": {
            "type": "string"
          },
          "adress": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "description": "representation of the remote SGW object"
      },
      "gps": {
        "title": "gps",
        "type": "object",
        "properties": {
          "lat": {
            "type": "string"
          },
          "long": {
            "type": "string"
          }
        },
        "description": "GPS location"
      },
      "sensor-dg-mov": {
        "title": "sensor-dg-mov",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "description": "Database entry for movement sensors"
      }
    }
  }
}