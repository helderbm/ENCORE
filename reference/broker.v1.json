    "schemas": {
      "sensor": {
        "title": "sensor",
        "type": "object",
        "description": "Model for Sensor description",
        "properties": {
          "id": {
            "type": "string"
          },
          "mac": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "last-comm": {
